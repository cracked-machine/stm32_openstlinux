{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure stm32mp157f_dk2",
            "type": "shell",
            "command": [
                "source layers/meta-st/meta-st-scripts/envsetup.sh",
                "&& bitbake ${input:image}"
            ],
            "problemMatcher": []
        },
        {
            "label": "custom bitbake command",
            "type": "shell",
            "command": [
                "rm -r /workspaces/stm32_poky/workdir &&",
                "cd layers/poky",
                "&& TEMPLATECONF=/workspaces/stm32_poky/layers/meta-test/conf/templates/stm32mp157f_dk2",
                "source oe-init-build-env ../../workdir",
                "&& ${input:bitbake_cmd}"
            ],
            "options": {
                "env": {
                    "TEMPLATECONF": "/workspaces/stm32_poky/layers/meta-test/conf/templates/stm32mp157f_dk2"
                }
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "bitbake_cmd",
            "type": "promptString",
            "default": "bitbake -e",
            "description": "Enter command"
        },
        {
            "id": "image",
            "type":"promptString",
            "default": "st-image-core",
            "description": "Type either 'st-image-weston' or 'st-image-core'"
        }
    ]
}